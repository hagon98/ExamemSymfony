 {% extends "base.html.twig" %} 
{% block body %}


<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
 
<div class="example-wrapper">
    <h1>{{ controller_name }}! ✅</h1>

  <div class="card text-white bg-info " style="max-width: 200rem;">
  <div class="card-header">Le Réalisateur/trice : {{unFilm.realisateur}}</div>
  <div class="card-body">
    <h4 class="card-title">La date de sortie : {{unFilm.sortie | date}}</h4>
    <p class="card-text">Petit résumé : {{unFilm.resume}}</p>
  </div>
</div>
<a href="{{path('supprimerFilm', {id:unFilm.id}) }}" class="btn btn-danger">x</a>
<a href="{{path('modifierFilm', {id:unFilm.id}) }}" class="btn btn-warning">Modifier</a>

  {# <h4> likes : {{ unFilm.likes|length }} </h4> #}

</div>

<div class=" d-flex flex-column align-items-center" >
{{ form_start(formulaire, {"action": path('new_impr', {id: unFilm.id})}) }}
{{ form_errors(formulaire)}}
{{ form_widget(formulaire.contenu, {'attr': {'class': 'form-control  ',
                                              'placeholder': 'Entrer un commentaire'                                                                                         
                                                }}) }}
{{ form_widget(formulaire.date, {'attr': {'class': 'form-control  ',
                                              'placeholder': 'Entrer une date'                                                                                         
                                                }}) }}


<button type="submit" class="btn btn-primary">Enregistrer</button> 

{{ form_end(formulaire) }}

 <div>
 {% for impression in unFilm.impressions %}


<hr>
 <div class="mt-3 mb-3 bg-warning" style="width: 500px;">
  <h2>  {{ impression.contenu }} </h2>
 </div>
 <a class="btn btn-danger" href="{{path('supprimerImpression', {id:impression.id}) }}">X</a>
 <a class="btn btn-primary" href="{{path('modifierImpression', {id:impression.id}) }}">Modifier</a>
 
<hr>
   
{% endfor %}
 
{% endblock %}